{
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*",
      "examples/*",
      "apps/*"
    ],
    "catalog": {
      "typescript": "~5.8.3"
    }
  },
  "scripts": {
    "e2e": "maestro test e2e/maestro/flows ",
    "build:native-stack": "cd apps/e2e-native-stack && CI=1 bunx expo run:ios --configuration Release --non-interactive",
    "test:native-stack": "maestro test apps/e2e-native-stack/.maestro/complete.yaml",
    "clean": "find . -name node_modules -type d -prune -exec rm -rf {} + && rm -f bun.lock bun.lockb && bun install --force",
    "build": "lerna run prepack",
    "lint": "biome check packages/react-native-screen-transitions/src",
    "typecheck": "tsc --noEmit -p packages/react-native-screen-transitions/tsconfig.json",
    "publish": "lerna publish from-package",
    "release": "bun run build && bun run changeset:publish",
    "changeset": "changeset",
    "changeset:version": "changeset version",
    "changeset:publish": "changeset publish"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.5",
    "@changesets/changelog-github": "^0.5.0",
    "@changesets/cli": "^2.27.7",
    "@lerna-lite/cli": "^4.7.0",
    "@lerna-lite/publish": "^4.7.0",
    "@lerna-lite/run": "^4.7.0",
    "@types/bun": "^1.2.19"
  }
}
